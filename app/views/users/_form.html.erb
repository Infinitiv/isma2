<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :login, 'Имя' %><br />
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :password, 'Пароль' %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, 'Подтверждение' %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <%= fields_for(:profile) do |p| %>
    <div class="field">
      <%= p.label :last_name, "Фамилия" %><br />
      <%= p.text_field :last_name %>
    </div>
    <div class="field">
      <%= p.label :first_name, "Имя" %><br />
      <%= p.text_field :first_name %>
    </div>
    <div class="field">
      <%= p.label :middle_name, "Отчество" %><br />
      <%= p.text_field :middle_name %>
    </div>
    <div class="field">
      <%= p.label :email, "Адрес почты" %><br />
      <%= p.email_field :email %>
    </div>
    <div class="field">
      <%= p.label :phone, "Телефон" %><br />
      <%= p.phone_field :phone %>
    </div>
  <% end %>
  <%= fields_for(:groups) do |g| %>
    <div class="field">
      <%= g.label :abiturient, 'Абитуриент?' %><br />
      <%= g.check_box :abiturient %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
